<?xml version="1.0"?>
<launch>
    <!-- Load map configuration -->
    <rosparam command="load" file="$(find cs_bot)/config/map_config.yaml" ns="map_config"/>

    <!-- Define spawn position arguments -->
    <arg name="t_spawn_x" default="0.0"/>
    <arg name="t_spawn_y" default="-1.43"/>
    <arg name="t_spawn_z" default="0.01"/>
    
    <arg name="ct_spawn_x" default="-1.72"/>
    <arg name="ct_spawn_y" default="1.63"/>
    <arg name="ct_spawn_z" default="0.01"/>

    <!-- Start Gazebo -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find cs_bot)/worlds/world3.world"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
    </include>

    <!-- T team robot -->
    <group ns="robot2">
        <!-- Load robot model -->
        <param name="robot_description" 
               command="$(find xacro)/xacro $(find cs_bot)/models/waffle_red.urdf.xacro robot_name:=robot2" />
        <!-- Spawn Robot -->
        <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" 
              args="-urdf -model t_robot1 
                    -x $(arg t_spawn_x)
                    -y $(arg t_spawn_y)
                    -z $(arg t_spawn_z)
                    -param robot_description"/>
    </group>

    <!-- CT team robot -->
    <group ns="robot1">
        <param name="robot_description" 
               command="$(find xacro)/xacro $(find cs_bot)/models/waffle_blue.urdf.xacro robot_name:=robot1" />
        <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" 
              args="-urdf -model robot1 
                    -x $(arg ct_spawn_x)
                    -y $(arg ct_spawn_y)
                    -z $(arg ct_spawn_z)
                    -param robot_description"/>
    </group>

    <!-- Load the map -->
    <node name="map_manager" pkg="cs_bot" type="map_manager.py" output="screen"/>

    <!-- rviz -->
    <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find cs_bot)/rviz/sim.rviz"/>
    </group>
</launch> 